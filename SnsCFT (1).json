{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Template to Create an SNS Topic and Subscriptions",
    "Parameters": {
        "TopicName": {
            "Type": "String",
            "Description": "Topic Name",
            "Default": "DecSnstopic"
        }
    },
    "Resources": {
        "MySNSTopic": {
            "Type": "AWS::SNS::Topic",
            "Properties": {
                "Subscription": [
                    {
                        "Endpoint": "gokul.anbazhagan@tigeranalytics.com",
                        "Protocol": "email"
                    }
                ],
                "TopicName": {
                    "Ref": "MySNSTopic"
                }
            }
        }
    },
    "Outputs": {
        "MyTopicArn": {
            "Description": "Arn of Created SNS Topic",
            "Value": {
                "Ref": "MySNSTopic"
            }
        }
    }
}
